---
import ArrowIcon from "@components/ArrowIcon.astro";
import NavLink from "@components/NavLink.astro";

const today = new Date();
---

<footer
  class="border-t-2 border-dashed mt-8 md:mt-12 py-8 text-black/75 flex flex-col gap-4 md:flex-row md:justify-between md:items-center"
>
  &copy; {today.getFullYear()} Hyun Don Moon

  <ul
    class="flex flex-col space-x-0 space-y-2 md:flex-row md:space-x-3 md:space-y-0"
  >
    <li>
      <NavLink
        class="flex items-center gap-2"
        href="https://github.com/hyundonmoon"
        rel="noopener noreferrer"
        target="_blank"
      >
        <ArrowIcon class="w-2 h-2" />
        <span>GitHub</span>
      </NavLink>
    </li>

    <li>
      <NavLink
        class="flex items-center gap-2"
        href="https://www.linkedin.com/in/hyundonmoon/"
        rel="noopener noreferrer"
        target="_blank"
      >
        <ArrowIcon class="w-2 h-2" />
        <span>LinkedIn</span>
      </NavLink>
    </li>
  </ul>
</footer>
